<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>tk.jviewer</groupId>
    <artifactId>jviewer</artifactId>
    <packaging>pom</packaging>
    <version>2.0</version>

    <description>JViewer Application</description>

    <developers>
        <developer>
            <name>Evgeny Mironenko</name>
            <email>emironen0@gmail.com</email>
        </developer>
    </developers>

    <inceptionYear>2013</inceptionYear>

    <modules>
        <module>jviewer-info</module>
        <module>jviewer-main</module>
        <module>jviewer-build</module>
    </modules>

    <dependencies>

    </dependencies>

    <properties>
        <!-- Project properties -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <!-- Dependencies -->
        <jsf.version>2.2.6</jsf.version>
        <primefaces.version>5.0</primefaces.version>
        <primefaces-theme.version>1.0.10</primefaces-theme.version>
        <sqlite.version>3.8.7</sqlite.version>
        <spring.version>4.0.5.RELEASE</spring.version>
        <spring-security.version>3.2.4.RELEASE</spring-security.version>
        <websocket.version>1.0</websocket.version>
        <log4j.version>1.2.17</log4j.version>
        <servlet-api.version>3.1.0</servlet-api.version>
        <junit.version>4.11</junit.version>
        <easymock.version>3.2</easymock.version>
        <shale.version>1.0.5</shale.version>
        <el.api.version>3.0.0</el.api.version>

        <!-- Plugins -->
        <war.plugin.version>2.6</war.plugin.version>
        <assembly.plugin.version>2.5.3</assembly.plugin.version>
    </properties>

    <repositories>
        <repository>
            <id>prime-repo</id>
            <name>PrimeFaces Maven Repository</name>
            <url>http://repository.primefaces.org</url>
            <layout>default</layout>
        </repository>
    </repositories>

</project>