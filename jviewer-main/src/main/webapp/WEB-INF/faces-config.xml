<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <resource-bundle>
            <base-name>tk.jviewer.bundle.DatabaseResourceBundle</base-name>
            <var>msg</var>
        </resource-bundle>
        <locale-config>
            <default-locale>ru</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>ru</supported-locale>
        </locale-config>
    </application>

    <managed-bean>
        <managed-bean-name>createQuizDialog</managed-bean-name>
        <managed-bean-class>tk.jviewer.dialog.EditQuizDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>quizService</property-name>
            <value>#{quizService}</value>
        </managed-property>
        <managed-property>
            <property-name>editQuizManagedBean</property-name>
            <value>#{editQuizManagedBean}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>takeTestDialog</managed-bean-name>
        <managed-bean-class>tk.jviewer.dialog.TakeQuizDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>managedBean</property-name>
            <value>#{takeQuizManagedBean}</value>
        </managed-property>
        <managed-property>
            <property-name>quizService</property-name>
            <value>#{quizService}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>mainPageDialog</managed-bean-name>
        <managed-bean-class>tk.jviewer.dialog.MainPageDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>controller</property-name>
            <value>#{managementController}</value>
        </managed-property>
        <managed-property>
            <property-name>viewerManagedBean</property-name>
            <value>#{viewerManagedBean}</value>
        </managed-property>
        <managed-property>
            <property-name>takeQuizManagedBean</property-name>
            <value>#{takeQuizManagedBean}</value>
        </managed-property>
        <managed-property>
            <property-name>editQuizManagedBean</property-name>
            <value>#{editQuizManagedBean}</value>
        </managed-property>
        <managed-property>
            <property-name>quizService</property-name>
            <value>#{quizService}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>viewerDialog</managed-bean-name>
        <managed-bean-class>tk.jviewer.dialog.ViewerDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>logoutController</property-name>
            <value>#{logoutController}</value>
        </managed-property>
        <managed-property>
            <property-name>jcWsClient</property-name>
            <value>#{jcWsClient}</value>
        </managed-property>
        <managed-property>
            <property-name>viewerManagedBean</property-name>
            <value>#{viewerManagedBean}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>registrationDialog</managed-bean-name>
        <managed-bean-class>tk.jviewer.dialog.RegistrationDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>localeModel</property-name>
            <value>#{localeModel}</value>
        </managed-property>
        <managed-property>
            <property-name>registrationService</property-name>
            <value>#{registrationService}</value>
        </managed-property>
        <managed-property>
            <property-name>resourceService</property-name>
            <value>#{resourceService}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>loginDialog</managed-bean-name>
        <managed-bean-class>tk.jviewer.dialog.LoginDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>authenticationManager</property-name>
            <value>#{authenticationManager}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>quizConverter</managed-bean-name>
        <managed-bean-class>tk.jviewer.converter.QuizConverter</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>managedBean</property-name>
            <value>#{takeQuizManagedBean}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>answerIdConverter</managed-bean-name>
        <managed-bean-class>tk.jviewer.converter.AnswerIdConverter</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

</faces-config>