<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <resource-bundle>
            <base-name>tk.jviewer.bundle.DatabaseResourceBundle</base-name>
            <var>msg</var>
        </resource-bundle>
        <locale-config>
            <default-locale>ru</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>ru</supported-locale>
        </locale-config>
    </application>

    <managed-bean>
        <managed-bean-name>takeTestDialog</managed-bean-name>
        <managed-bean-class>tk.jviewer.dialog.TakeTestDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>userModel</property-name>
            <value>#{userModel}</value>
        </managed-property>
        <managed-property>
            <property-name>managedBean</property-name>
            <value>#{takeTestManagedBean}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>testConverter</managed-bean-name>
        <managed-bean-class>tk.jviewer.converter.TestConverter</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>managedBean</property-name>
            <value>#{takeTestManagedBean}</value>
        </managed-property>
    </managed-bean>

</faces-config>